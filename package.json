{
  "name": "hoare",
  "version": "1.4.5",
  "description": "A simple, yet all-inclusive unit test framework with built-in mocking and assertions with Typescript support.",
  "main": "./dist/index.js",
  "bin": {
    "hoare": "./bin/cli.js"
  },
  "types": "dist/index.d.ts",
  "files": [
    "bin",
    "dist",
    "demo"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mhweiner/hoare.git"
  },
  "scripts": {
    "test": "npm run build && c8 ./bin/cli.js '@(demo|src)/**/*.spec.@(ts|js)' && c8 report -r text -r html",
    "lint": "eslint ./ --ext .js,.ts",
    "build": "rm -rf ./dist && tsc --project ./tsconfig.json",
    "prepare": "npm run build"
  },
  "homepage": "https://github.com/mhweiner/hoare",
  "keywords": [
    "unit test",
    "ts unit test",
    "typescript unit test",
    "unit-test",
    "mock",
    "mocking",
    "typescript mocking",
    "ts mock",
    "proxyquire",
    "ts proxyquire",
    "typescript proxyquire",
    "isolate",
    "dependency mock",
    "rewire"
  ],
  "dependencies": {
    "c8": "^7.10.0",
    "callsites": "3.1.0",
    "deep-object-diff": "1.1.0",
    "diff": "5.0.0",
    "kleur": "4.1.4",
    "ora": "5.4.1",
    "serialize-error": "8.1.0",
    "sinon": "11.1.2",
    "timekeeper": "2.2.0",
    "tiny-glob": "^0.2.9"
  },
  "devDependencies": {
    "@types/diff": "^5.0.1",
    "@types/node": "^16.11.6",
    "@types/sinon": "10.0.6",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "eslint": "^8.1.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  }
}
